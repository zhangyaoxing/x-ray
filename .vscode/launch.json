    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "LOG_LEVEL": "INFO",
                "ENV": "development"
            }
        },
        {
            "name": "App: X-Ray-HC",
            "type": "debugpy",
            "request": "launch",
            "program": "x-ray",
            "console": "integratedTerminal",
            "args": [
                "-c", "config.json",
                "hc",
                "mongodb+srv://cluster0.wy1z6.mongodb.net/admin",
                // "--uri", "mongodb://localhost:30017/admin?tls=false&connectTimeoutMS=5000",
                // "--uri", "mongodb://localhost:27017/admin?tls=false&connectTimeoutMS=5000",
                "-f", "html",
            ],
            "env": {
                "LOG_LEVEL": "INFO",
                "ENV": "development"
            }
        }
    ]
}