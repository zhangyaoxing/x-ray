{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "LOG_LEVEL": "INFO",
                "ENV": "development"
            }
        },
        {
            "name": "App: X-Ray-HC",
            "type": "debugpy",
            "request": "launch",
            "program": "x-ray",
            "console": "integratedTerminal",
            "args": [
                "-c",
                "config.json",
                "hc",
                "-s",
                "default",
                "mongodb://localhost:30017/admin?tls=false&connectTimeoutMS=5000",
                // "mongodb://localhost:27017/admin?tls=false&connectTimeoutMS=5000",
            ],
            "env": {
                "LOG_LEVEL": "INFO",
                "ENV": "development"
            }
        },
        {
            "name": "App: X-Ray-LOG",
            "type": "debugpy",
            "request": "launch",
            "program": "x-ray",
            "console": "integratedTerminal",
            "args": [
                "-c",
                "config.json",
                "log",
                "-r",
                "1",
                "misc/example.log"
            ],
            "env": {
                "LOG_LEVEL": "INFO",
                "ENV": "development"
            }
        },
        {
            "name": "Unit Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "args": [],
            "env": {
                "PYTHONPATH": "."
            }
        }
    ]
}